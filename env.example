######### Required fields#########
# Telegram API configuration (obtained from https://my.telegram.org/apps)
API_ID=
API_HASH=

# The mobile phone number used to log in to the user account (format such as: +8613812345678)
PHONE_NUMBER=

# Bot Token
BOT_TOKEN=

# User ID (obtained from @userinfobot)
USER_ID=



################ The following are all optional##################

# Administrator list (fill in user_id here, leave it blank to use the default USER_ID above, separate multiple users with commas)
ADMINS=

# Bot message deletion time (seconds), 0 means immediate deletion, -1 means no deletion
BOT_MESSAGE_DELETE_TIMEOUT=300

# Whether to automatically delete the command message sent by the user (true/false)
USER_MESSAGE_DELETE_ENABLE=false

#Default maximum media file size limit (unit: MB)
DEFAULT_MAX_MEDIA_SIZE=15

# Default time zone
DEFAULT_TIMEZONE=Asia/Shanghai

# Automatically update the chat window name and time in the database (24-hour system)
CHAT_UPDATE_TIME=03:00

# Database Configuration
DATABASE_URL=sqlite:///./db/forward.db

########## UI Layout Configuration#########
AI_MODELS_PER_PAGE=10
KEYWORDS_PER_PAGE=10
PUSH_CHANNEL_PER_PAGE=10

# Summary list (rows)
SUMMARY_TIME_ROWS=10  
# Summary list (columns)
SUMMARY_TIME_COLS=6

# Delay time list (rows)
DELAY_TIME_ROWS=10
# Delay time list (columns)
DELAY_TIME_COLS=6

# List of media sizes (rows)
MEDIA_SIZE_ROWS=10
# List of media sizes (columns)
MEDIA_SIZE_COLS=6

# List of media extensions (rows)
MEDIA_EXTENSIONS_ROWS=10
# List of media extensions (columns)
MEDIA_EXTENSIONS_COLS=6

# Number of rules to display per page
RULES_PER_PAGE=20

######### AI Settings #########

# Default AI Model
DEFAULT_AI_MODEL=gemini-2.0-flash

# OpenAi API Key
OPENAI_API_KEY=your_openai_api_key
# Leave blank to use the official API https://api.openai.com/v1
OPENAI_API_BASE=  

# Claude API Key
CLAUDE_API_KEY=your_claude_api_key
# Leave blank to use the official interface
CLAUDE_API_BASE=

# Gemini API Key
# Use the official interface by default
GEMINI_API_KEY=your_gemini_api_key
# Compatible with the third-party API Base of OpenAI interface standard, such as the official one: https://generativelanguage.googleapis.com/v1beta
GEMINI_API_BASE=

# DeepSeek API Key
DEEPSEEK_API_KEY=your_deepseek_api_key
# Leave blank to use the official API https://api.deepseek.com/v1
DEEPSEEK_API_BASE=  

# Qwen API Key
QWEN_API_KEY=your_qwen_api_key
# Leave blank to use the official interface https://dashscope.aliyuncs.com/compatible-mode/v1
QWEN_API_BASE=  

# Grok API Key
GROK_API_KEY=your_grok_api_key
# Leave blank to use the official API https://api.x.ai/v1
GROK_API_BASE=     

# Default AI prompt words
DEFAULT_AI_PROMPT=Please respect the original intention, keep the original format unchanged, and rewrite the following content in simplified Chinese:

#Default AI summary prompt words
DEFAULT_SUMMARY_PROMPT=Please summarize the messages in the following channels/groups within the last 24 hours.
#Default summary time (24-hour system)
DEFAULT_SUMMARY_TIME=07:00


# AI summarizes the number of messages crawled each time
SUMMARY_BATCH_SIZE=20
# AI summarizes the interval between each crawled message (seconds)
SUMMARY_BATCH_DELAY=2


######### RSS Configuration #########
# Whether to enable RSS function (true/false)
RSS_ENABLED=false

# RSS basic access URL
RSS_BASE_URL=

# RSS media file base URL
RSS_MEDIA_BASE_URL=


######### Extended Content#########

# Whether to enable synchronization service with the general forum blocking plug-in server (true/false)
UFB_ENABLED=false
# Server address
UFB_SERVER_URL=
# User API_KEY
UFB_TOKEN=




